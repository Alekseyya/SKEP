    $(document).ready(function () {
        $(".tile").height($("#tile1").width());
        $(".carousel").height($("#tile1").width());
        $(".item").height($("#tile1").width());

        $(window).resize(function () {
            if (this.resizeTO) clearTimeout(this.resizeTO);
            this.resizeTO = setTimeout(function () {
                $(this).trigger('resizeEnd');
            }, 10);
        });

        $(window).bind('resizeEnd', function () {
            $(".tile").height($("#tile1").width());
            $(".carousel").height($("#tile1").width());
            $(".item").height($("#tile1").width());
        });

    });


    var rpcs = rpcs || {};

    rpcs.tiles = {
        "imgError": function (elm) {
            $(elm).replaceWith("<span style='color:#ffffff'>Error: The image specified was not found</span>");
        },
        "slideUp": function (elm, span) {
            var e;
            var d;
            if (span) {
                e = $(elm).parent().find("div.rpcs-tile-detailsbox");
            } else {
                e = $(elm);
            }
            var d = $(e).find("li.rpcs-tile-li-description");
            e.stop().animate({ "top": "0px" }, 200);
        },
        "slideDown": function (elm, span, n) {
            var e;
            if (span) {
                e = $(elm).parent().find("div.rpcs-tile-detailsbox");
            } else {
                e = $(elm);
            }
            var d = $(e).find("li.rpcs-tile-li-description");
            e.stop().animate({ "top": n + "px" }, 100);
        },
        "goTo": function (url, t, elm, refresh) {
            if (url !== "") {
                switch (t.toLowerCase()) {
                    case "new window":
                        window.open(url);
                        break;
                    default:
                        location.href = url;
                }
            }
        },
    };


</script>