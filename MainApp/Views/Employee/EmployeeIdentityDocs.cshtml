@model Core.Models.Employee


@{
    // ViewBag.Title = "Карточка командируемого сотрудника:";
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

<style>
    .form-group {
        margin-bottom: 0px !important;
    }
</style>



@if (Model == null)
{
    <br />
    <div class="alert alert-warning" role="alert">
        <span class="glyphicon glyphicon-alert"></span> Карточка сотрудника не найдена.
    </div>
}
else
{
    <div class="form-horizontal" style="padding-top: 20px;padding-left: 20px;">
        <div class="form-group row">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8" style="padding:6px 12px">
                @Html.ActionLink(Model.FullName, "Details", "Employee", routeValues: new { id = Model.ID }, htmlAttributes: new { @target = "_blank" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.BirthdayDate, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8" style="padding:6px 12px">
                @Html.DisplayFor(model => model.BirthdayDate)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label control-label col-md-4" for="Record_Employee_FullName">Подразделение</label>
            <div class="col-md-8" style="padding:6px 12px">
                @Html.ActionLink(Model.Department.FullName, "Details", "Department", routeValues: new { id = Model.DepartmentID }, htmlAttributes: new { @target = "_blank" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.EmployeePositionTitle, htmlAttributes: new { @class = "col-form-label control-label col-md-4" })
