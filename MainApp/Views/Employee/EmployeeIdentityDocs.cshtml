            <div class="col-md-8" style="padding:6px 12px">
                @Html.DisplayFor(model => model.Organisation.FullName)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label control-label col-md-4" for="Record_Employee_FullName">Территориальное расположение</label>
