                @Html.ValidationMessageFor(model => model.ProjectScheduleEntryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpectedDueDate, htmlAttributes: new { @class = "control-label col-md-4" })
