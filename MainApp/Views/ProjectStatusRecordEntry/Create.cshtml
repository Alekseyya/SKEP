@using MainApp.HtmlControls
@model Core.Models.ProjectStatusRecordEntry

@{
    ViewBag.Title = "Создать подробности записи статус отчета по проекту";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
