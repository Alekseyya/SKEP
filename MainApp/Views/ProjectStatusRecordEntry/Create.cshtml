                @Html.EditorFor(model => model.ProjectScheduleEntryComments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectScheduleEntryComments, "", new { @class = "text-danger" })
