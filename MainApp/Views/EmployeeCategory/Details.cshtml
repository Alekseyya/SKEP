
@using MainApp.HtmlControls
@using Core.Models.RBAC
@model Core.Models.EmployeeCategory
@{
    ViewBag.Title = "Запись о категории сотрудника";
}

<div>
    <h4>Запись о категории / % ставки сотрудника</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryDateBegin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryDateBegin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryDateEnd)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryDateEnd)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmploymentRatio)
        </dt>

        <dd>
            @if (Model.EmploymentRatio.HasValue)
            {
                @Html.DisplayFor(modelItem => Model.EmploymentRatio)
            }
            else
            {
                @("Не установлено")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>
</div>
<p>
    <div class="separeted-hrefs">
        @Html.ActionLinkWithPermission("Редактировать", "Edit", new { id = Model.ID }, Operation.EmployeeCategoryCreateUpdate)
        @Html.ActionLinkWithPermission("К списку", "Index", Operation.EmployeeCategoryView)
    </div>
</p>